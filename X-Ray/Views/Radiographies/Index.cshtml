@model IEnumerable<X_Ray.Models.Radiography>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PatientCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.InsuranceCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobilePhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RadiographyCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfSubmission)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuggestedDate)
        </th>
        @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
        {
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        }
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PatientCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.InsuranceCode)
    </td>


    <td>
        @Html.DisplayFor(modelItem => item.MobilePhone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RadiographyCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateOfSubmission)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.SuggestedDate)
    </td>
    @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
    {
        <td>
            @Html.DisplayFor(modelItem => item.Priority)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
    }
<td>
    @Html.ActionLink("Details", "Details", new { id = item.Id })
    @if ((User.IsInRole("Manager") || User.IsInRole("Admin")))
    {
        @Html.Raw(" - ")
        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
        @Html.Raw(" - ")
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })

    }
</td>
    </tr>
}

</table>
